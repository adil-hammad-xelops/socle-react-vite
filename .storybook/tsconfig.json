{
  "compilerOptions": {
    "target": "ES2022",
    "useDefineForClassFields": true,
    "lib": ["ES2022", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "types": ["node", "@storybook/react"],
    "skipLibCheck": true,

    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "verbatimModuleSyntax": true,
    "moduleDetection": "force",
    "noEmit": true,
    "jsx": "react-jsx",

    /* Absolute imports */
    "baseUrl": "../src",
    "paths": {
      "@/*": ["./*"],
      "services/*": ["./services/*"],
      "components/*": ["./components/*"],
      "containers/*": ["./containers/*"],
      "pages/*": ["./pages/*"],
      "routes/*": ["./routes/*"],
      "types/*": ["./types/*"],
      "utils/*": ["./utils/*"],
      "hooks/*": ["./hooks/*"],
      "examples/*": ["./examples/*"],
      "theme/*": ["./theme/*"]
    },

    /* Interop */
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,

    /* Linting */
    "strict": true
  },
  "include": [
    "./**/*.ts",
    "./**/*.tsx",
    "../src/**/*.stories.ts",
    "../src/**/*.stories.tsx"
  ],
  "exclude": []
}

